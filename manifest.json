{
  "manifest_version": 3,
  "name": "DiscreetDisplay",
  "version": "0.2",
  "description": "Blurs specific elements in web pages.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://live-wf.webfleet.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://live-wf.webfleet.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["*://live-wf.webfleet.com/*"]
    }
  ]
}
